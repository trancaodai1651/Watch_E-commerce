@model IEnumerable<DOANLAPTRINHWEB.Models.HINHDANG>
@using DOANLAPTRINHWEB.Models
@{
    ViewBag.Title = "ShapeList";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<!-- Content wrapper -->
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <!-- Basic Bootstrap Table -->
        <div class="card">
            <a type="submit" class="btn btn-primary" href="@Url.Action("Add", "Shape")" style="width: 250px; margin: 20px;">Thêm hình dáng đồng hồ</a>
            <h5 class="card-header">DANH SÁCH HÌNH DÁNG ĐỒNG HỒ</h5>
            <div class="table-responsive text-nowrap">
                <table class="table">
                    <thead>
                        <tr>
                            <th></th>
                            <th style="text-align:center"><strong>Tên hình dáng đồng hồ</strong></th>
                            <th></th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tbody class="table-border-bottom-0">
                            <tr>
                                <th></th>
                                <td style="text-align:center"><i class="fab fa-angular fa-lg text-danger"></i> @Html.DisplayFor(model => item.TenHinhDang)</td>
                                <td style="text-align:center">
                                    <a class="btn btn-info" href="@Url.Action("Update", "Shape", new { id = item.MaHinhDang })"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                    <a class="btn btn-danger" href="@Url.Action("Delete", "Shape", new { id = item.MaHinhDang })"><i class="bx bx-trash me-1"></i> Delete</a>
                                </td>
                            </tr>
                        </tbody>
                    }
                </table>
            </div>
        </div>
    </div>
</div>


<style>
    .table th {
        font-size: 12px;
    }
</style>
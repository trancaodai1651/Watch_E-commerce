@model IEnumerable<DOANLAPTRINHWEB.Models.DONGHO>
@using DOANLAPTRINHWEB.Models
@using System.Data.Linq
@{
    ViewBag.Title = "Danh sách sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
    dbWatchDataContext data = new dbWatchDataContext();
    var thuonghieus = data.THUONGHIEUs.ToList();
    var loaidays = data.LOAIDAYs.ToList();
    var chatlieus = data.CHATLIEUMATKINHs.ToList();
    var hinhdangs = data.HINHDANGs.ToList();
    var kichthuocs = data.KICHTHUOCs.ToList();
    var mucdos = data.MUCDOCHONGNUOCs.ToList();
    var gioitinhs = data.GIOITINHs.ToList();
}
<title>Product</title>
<!-- Header -->
<!-- Product -->
<div class="bg0 m-t-23 p-b-140">
    <div class="container">

        @using (Html.BeginForm())
        {
            @*Search*@
            <div style="display: flex; align-items: center; justify-content: space-between">
                <div class="dis-none panel-search w-full p-t-10 p-b-15" style="display: block; width: 85%;margin-right: 20px">
                    <div class="bor8 dis-flex p-l-15">
                        <button class="size-113 flex-c-m fs-16 cl2 hov-cl1 trans-04">
                            <i class="zmdi zmdi-search"></i>
                        </button>

                        <input class="mtext-107 cl2 size-114 plh2 p-r-15" type="text" name="SearchProduct" placeholder="Search">
                    </div>
                </div>
                <input type="submit" class="flex-c-m stext-101 cl5 size-103 bg2 bor1 hov-btn1 p-lr-15 trans-04" value="Search" />
            </div>
        }

        <div class="flex-w flex-sb-m p-b-52">
            <div class="flex-w flex-l-m filter-tope-group m-tb-10">
                @Html.ActionLink("All Products", "Product", "Product", new { @class = "stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5" })
                @foreach (var item in gioitinhs)
                {
                    <a href="@Url.Action("Product", "Watch", new { gioitinh = item.MaGioiTinh})" class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5" name="gioitinh">
                        @item.TenGioiTinh
                    </a>
                }
            </div>

            <div class="flex-w flex-c-m m-tb-10">
                <div class="flex-c-m stext-106 cl6 size-104 bor4 pointer hov-btn3 trans-04 m-r-8 m-tb-4 js-show-filter">
                    <i class="icon-filter cl2 m-r-6 fs-15 trans-04 zmdi zmdi-filter-list"></i>
                    <i class="icon-close-filter cl2 m-r-6 fs-15 trans-04 zmdi zmdi-close dis-none"></i>
                    Filter
                </div>
            </div>

            <!-- Search product -->
            <div class="dis-none panel-search w-full p-t-10 p-b-15" > 
                <div class="bor8 dis-flex p-l-15">
                    <button class="size-113 flex-c-m fs-16 cl2 hov-cl1 trans-04">
                        <i class="zmdi zmdi-search"></i>
                    </button>

                    <input class="mtext-107 cl2 size-114 plh2 p-r-15" type="text" name="search-product" placeholder="Search">
                </div>
            </div>

            <!-- Filter -->
            <div class="dis-none panel-filter w-full p-t-10">
                <div class="wrap-filter flex-w bg6 w-full p-lr-40 p-t-27 p-lr-15-sm">
                    <div class="filter-col1 p-r-15 p-b-27">
                        <div class="mtext-102 cl2 p-b-15">
                            Brand
                        </div>

                        <ul>
                            @foreach (var item in thuonghieus)
                            {
                                <li class="p-b-6">
                                    <a href="@Url.Action("Product", "Watch", new { thuonghieu = item.MaThuongHieu})" class="filter-link stext-106 trans-04" name="thuonghieu">
                                        @item.TenThuongHieu
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                    <div class="filter-col1 p-r-15 p-b-27">
                        <div class="mtext-102 cl2 p-b-15">
                            Albert
                        </div>

                        <ul>
                            @foreach (var item in loaidays)
                            {
                                <li class="p-b-6">
                                    <a href="@Url.Action("Product", "Watch", new { loaiday = item.MaLoaiDay})" class="filter-link stext-106 trans-04" name="loaiday">
                                        @item.TenLoaiDay
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                    <div class="filter-col1 p-r-15 p-b-27">
                        <div class="mtext-102 cl2 p-b-15">
                            Glass
                        </div>

                        <ul>
                            @foreach (var item in chatlieus)
                            {
                                <li class="p-b-6">
                                    <a href="@Url.Action("Product", "Watch", new { chatlieu = item.MaChatLieuMatKinh})" class="filter-link stext-106 trans-04" name="chatlieu">
                                        @item.TenChatLieuMatKinh
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                    <div class="filter-col1 p-r-15 p-b-27">
                        <div class="mtext-102 cl2 p-b-15">
                            Shape
                        </div>

                        <ul>
                            @foreach (var item in hinhdangs)
                            {
                                <li class="p-b-6">
                                    <a href="@Url.Action("Product", "Watch", new { hinhdang = item.MaHinhDang})" class="filter-link stext-106 trans-04" name="hinhdang">
                                        @item.TenHinhDang
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                    <div class="filter-col1 p-r-15 p-b-27">
                        <div class="mtext-102 cl2 p-b-15">
                            Size
                        </div>

                        <ul>
                            @foreach (var item in kichthuocs)
                            {
                                <li class="p-b-6">
                                    <a href="@Url.Action("Product", "Watch", new { kichthuoc = item.MaKichThuoc})" class="filter-link stext-106 trans-04" name="kichthuoc">
                                        @item.TenKichThuoc
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                    <div class="filter-col1 p-r-15 p-b-27">
                        <div class="mtext-102 cl2 p-b-15">
                            Water
                        </div>

                        <ul>
                            @foreach (var item in mucdos)
                            {
                                <li class="p-b-6">
                                    <a href="@Url.Action("Product", "Watch", new { kichthuoc = item.MaMucDoChongNuoc})" class="filter-link stext-106 trans-04" name="mucdo">
                                        @item.TenMucDoChongNuoc
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="row isotope-grid">
            @foreach (var item in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item watches">
                    <!-- Block2 -->
                    <div class="block2">
                        <div class="block2-pic hov-img0">
                            <img src="@Html.DisplayFor(modelItem => item.HinhDongHo)" alt="IMG-PRODUCT" style="height: 330px;">

                            <a href="@Url.Action("ProductDetail", "Watch", new {id = item.MaDongHo})" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04">
                                Quick View
                            </a>
                        </div>

                        <div class="block2-txt flex-w flex-t p-t-14">
                            <div class="block2-txt-child1 flex-col-l ">
                                <a href="@Url.Action("ProductDetail", "Watch", new {id = item.MaDongHo})" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                    @Html.DisplayFor(modelItem => item.TenDongHo)
                                </a>

                                <span class="stext-105 cl3">
                                    @String.Format("{0:0,0}", item.GiaBan) VNĐ
                                </span>
                            </div>

                            <div class="block2-txt-child2 flex-r p-t-3">
                                <a href="#" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
                                    <img class="icon-heart1 dis-block trans-04" src="~/Content/images/icons/icon-heart-01.png" alt="ICON">
                                    <img class="icon-heart2 dis-block trans-04 ab-t-l" src="~/Content/images/icons/icon-heart-02.png" alt="ICON">
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Load more -->
        <div class="flex-c-m flex-w w-full p-t-45">
            <a href="/Watch/Product" class="flex-c-m stext-101 cl5 size-103 bg2 bor1 hov-btn1 p-lr-15 trans-04">
                Load More
            </a>
        </div>
    </div>
</div>
@using DOANLAPTRINHWEB.Models;
@model List<Cart>
@{
    ViewBag.Title = "Đặt hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    KHACHHANG kh = (KHACHHANG)Session["Taikhoan"];
}

<div class="container">
    <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
        <a href="index.html" class="stext-109 cl8 hov-cl1 trans-04">
            Home
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>

        <span class="stext-109 cl4">
            Shoping Cart
        </span>
    </div>
</div>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <!-- Shoping Cart -->
    <form class="bg0 p-t-75 p-b-85">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
                    <div class="m-l-25 m-r--38 m-lr-0-xl">
                        <div class="wrap-table-shopping-cart">
                            <table class="table-shopping-cart">
                                <tr class="table_head">
                                    <th class="column-1">Product</th>
                                    <th class="column-2"></th>
                                    <th class="column-3">Price</th>
                                    <th style="text-align:center" class="column-4">Quantity</th>
                                    <th class="column-5">Total</th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr class="table_row">
                                        <td class="column-1">
                                            <div class="how-itemcart1">
                                                <img src="@Html.DisplayFor(modelItem => item.hinh)" alt="IMG">
                                            </div>
                                        </td>
                                        <td class="column-2">@Html.DisplayFor(modelItem => item.ten)</td>
                                        <td class="column-3">@String.Format("{0:0,0}", item.gia)</td>
                                        <td class="column-4" style="text-align:center">
                                            @Html.DisplayFor(modelItem => item.iSoluong)
                                        </td>
                                        <td class="column-5" style="text-align:center">@string.Format("{0:0,0}", item.dThanhtien) </td>
                                    </tr>
                                }
                            </table>
                        </div>

                        
                    </div>
                </div>

                <div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
                    <div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
                        <h4 class="mtext-109 cl2 p-b-30">
                            Cart Totals
                        </h4>

                        <div class="flex-w flex-t bor12 p-b-13">
                            <div class="size-208">
                                <span class="stext-110 cl2">
                                    The Bees 
                                </span>
                            </div>

                            <div class="size-209">
                                <span class="mtext-110 cl2">

                                </span>
                            </div>
                        </div>

                        <div class="flex-w flex-t bor12 p-t-15 p-b-30">
                            <div class="size-208 w-full-ssm">
                                <span class="stext-110 cl2">
                                    Name
                                </span>
                            </div>

                            <div class="size-209 p-r-18 p-r-0-sm w-full-ssm">
                                <p class="stext-111 cl6 p-t-2">
                                    @kh.TenKhachHang
                                </p>
                            </div>
                            <div class="size-208 w-full-ssm">
                                <span class="stext-110 cl2">
                                    Address
                                </span>
                            </div>

                            <div class="size-209 p-r-18 p-r-0-sm w-full-ssm">
                                <p class="stext-111 cl6 p-t-2">
                                    @kh.DiachiKH
                                </p>
                            </div>
                            <div class="size-208 w-full-ssm">
                                <span class="stext-110 cl2">
                                    Phone
                                </span>
                            </div>

                            <div class="size-209 p-r-18 p-r-0-sm w-full-ssm">
                                <p class="stext-111 cl6 p-t-2">
                                    @kh.DienThoaiKH
                                </p>
                            </div>
                            <div class="size-208 w-full-ssm">
                                <span class="stext-110 cl2">
                                    Order date
                                </span>
                            </div>

                            <div class="size-209 p-r-18 p-r-0-sm w-full-ssm">
                                <p class="stext-111 cl6 p-t-2">
                                    @DateTime.Now.ToShortDateString()
                                </p>
                            </div>
                        </div>
                      

                        <div class="flex-w flex-t p-t-27 p-b-33">
                            <div class="size-208">
                                <span class="mtext-101 cl2">
                                    Total
                                </span>
                            </div>

                            <div class="size-209 p-t-1">
                                <span class="mtext-110 cl2">
                                    @String.Format("{0:0,0}", ViewBag.Tongtien)
                                </span>
                            </div>
                        </div>


                        <a href="@Url.Action("DatHang", "Cart")">
                            <button class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer">
                                THANH TOÁN
                            </button>
                        </a>
                        <div style="margin-top:12px; width:100%">
                            @Html.ActionLink("QUAY LẠI", "ViewCarts", "Cart", new { @class = "flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer" })
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </form>
}



